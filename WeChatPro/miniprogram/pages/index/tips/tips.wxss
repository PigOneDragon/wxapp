/* miniprogram/pages/index/tips/tips.wxss */
page .ul-tabs_b{
    background-color: #fff;
}
.m-tips{
    padding-bottom: 100rpx;
}
.m-tips .top {
    display: -webkit-box;
    display: -webkit-flex;
    display: -moz-box;
    display: -ms-flexbox;
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}

.m-tips .top label {
    font-size: 26rpx;
    color: #aaaaaa;
}

.m-tips label checkbox {
    width: 28rpx;
    height: 100rpx;
    margin-right: 15rpx;
    border-radius: 50%;
    overflow: hidden;
    float: left;
    background: url(data:image/png;base64,) no-repeat center center;
    background-size: 100%;
}

.m-tips label checkbox[checked] {
    background-image: url(data:image/png;base64,);
}

/* 默认的样式隐藏 */
.wx-checkbox-input {
    display: none;
}

.m-tips .top .txt {
    font-size: 26rpx;
    color: #666666;
}

.m-tips .item {
    overflow: hidden;
    margin-bottom: 22rpx;
}

.m-tips .name {
    overflow: hidden;
    background-color: #fff;
    border-radius: 10rpx;
}

.m-tips .name .desc {
    padding: 40rpx 25rpx 25rpx;
    overflow: hidden;
}

.m-tips .name .txt {
    float: left;
    width: 50%;
    font-size: 26rpx;
    color: #aaaaaa;
    line-height: 40rpx;
}
.m-tips .name .txt1{
    float: none;
    width: auto;
}
.m-tips .name .txt text {
    color: #666666;
}

.m-tips .name .bot {
    border-top: 1px solid #eee;
    font-size: 26rpx;
    color: #666666;
    padding: 40rpx 0 40rpx 25rpx;
}

.m-tips .name .bot text{
    color: #009b62;
    font-size: 24rpx;
}
#sizer .btn,
.m-tips .btn{
    display: block;
    line-height: 100rpx;
    background-color: #009b62;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    border-radius: 0;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
#sizer .btn1{
     display: block;
     line-height: 100rpx;
     background-color: #009b62;
     text-align: center;
     color: #fff;
     font-size: 30rpx;
     border-radius: 0;
}
/* 弹窗 */
#sizer{
    position: absolute;
    top: 90rpx;
    left: 0;
    width: 100%;
    padding-top: 45rpx;
    background-color: #fff;
    border-top: 1px solid #ccc;
}
#sizer .group{
    padding:0 40rpx;
    overflow: hidden;
    margin-bottom: 25rpx;
}
#sizer .group .txt{
    float: left;
    width: 150rpx;
    font-size: 28rpx;
    color: #666666;
    line-height: 70rpx;
}
#sizer .group .in{
    overflow: hidden;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #edf5f7;
    position: relative;
}
#sizer .group .in picker{
    padding:0 25rpx;
    font-size: 28rpx;
    color: #aaaaaa;
}
#sizer .group .in .rl{
    float: right;
    width: 40rpx;
    margin-top: 18rpx;
}