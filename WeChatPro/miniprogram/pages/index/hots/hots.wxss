/* pages/index/hots/hots.wxss */
page .ul-tabs_b {
    background-color: #fff;
}
.m-pro{
    margin-top: 32rpx;
}
.m-pro .item{
    background-color: #fff;
    padding-bottom: 15rpx;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    margin-bottom: 20rpx;
}
.m-pro .item image{
    display: block;
}
.m-pro .item .txt{
    padding:30rpx 30rpx 0;
    font-size: 24rpx;
    color: #aaaaaa;
    line-height: 40rpx;
}
.m-pro .item .txt .tit{
    font-size: 30rpx;
    color: #0f0f0f;
    font-weight: bold;
    margin-bottom: 30rpx;
}
.m-pro .item .txt .bot{
    text-align: right;
}
.m-pro .item .txt .more{
    display: inline-block;
    padding: 0 30rpx;
    text-align: center;
    line-height: 60rpx;
    border-radius: 60rpx;
    background-color: #009b62;
    color: #fff;
    margin:20rpx 0 30rpx;
}