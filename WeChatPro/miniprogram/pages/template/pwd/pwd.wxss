/* miniprogram/pages/wangjimima/wangjimima.wxss */
page{
  background: #fff;
}
.m-pwd{
  padding: 54rpx 75rpx 0;
}
.m-pwd input{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 50rpx;
  background: #edf5f7;
  margin-top: 30rpx;
  font-size: 28rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  color: #333333;
}
.vcode_default {
  color: #cccccc;
}
.m-pwd .auth{
  position: relative;
}
.m-pwd .code{
  position: absolute;
  top: 0;
  right: 38rpx;
  height: 100%;
  line-height: 100%;
  font-size: 28rpx;
  color: #009b62;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.next{
  margin-top: 50rpx;
  background: #009b62;
  text-align: center;
  height: 104rpx;
  line-height: 104rpx;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 32rpx;
}