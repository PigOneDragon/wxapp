.top{
    position: relative;
    height: 487rpx;
}
.top-bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 487rpx;
}
.top .user{
    overflow: hidden;
    position: absolute;
    top: 33%;
    left: 35rpx;
    display: flex;
    right: 0;
}
.top .user .user-img{
    float: left;
    width: 120rpx;
    height: 120rpx;
    margin-right: 42rpx;
    border-radius: 50%;
    overflow: hidden;
}
.top .user .user-img image{
    display: block;
    max-width: 100%;
    height: 100%;
}
.top .user .info{
    flex: 1;
}
.top .user .info .name{
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
}
.top .user .info .txt{
    color: #fff;
    font-size: 24rpx;
}
.top  .kpi{
    position: absolute;
    bottom: -7rpx;
    left: 25rpx;
    right: 25rpx;
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    padding: 40rpx 54rpx 40rpx 0;
}
.top .kpi .item{
    float: left; 
    width: 50%;
    padding-left:54rpx;
    box-sizing: border-box;
}
.top .kpi .item.bl{
    border-right: 1px solid #eeeeee;
}
.top .kpi .txt{
    font-size: 28rpx;
    color: #272727;
}
.top .kpi .num{
    font-size: 28rpx;
    color: #009b62;
    font-weight: bold;
}
.top .kpi .num .more{
    float: right;
    padding:0 15rpx;
    background-color: #edf5f7;
    border-radius: 5rpx;
    line-height: 40rpx;
    color: #009b62;
}
.detail{
    background-color: #fff;
    margin-top: 30rpx;
}
.detail .con{
    overflow: hidden;
    display: block;
    padding-left: 25rpx;
}
.detail .con .icon{
    float: left;
    margin-top: 23rpx;
    width: 55rpx;
    height: 55rpx;
    margin-right: 23rpx;
    overflow: hidden;
}
.detail .con .icon image{
    display: block;
    width: 100%;
    height: 100%;
}
.detail .con .r{
    overflow: hidden;
}
.detail .con .txt{
    overflow: hidden;
    font-size: 28rpx;
    color: #3c3d3d;
    line-height: 100rpx;
    border-bottom: 1px solid #eee;
}
.detail .con .r .arrow{
    float: right;
    width: 15rpx;
    height: 36rpx;
    margin-top: 30rpx;
    margin-right: 30rpx;
}