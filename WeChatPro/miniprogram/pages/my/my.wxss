.top{
    position: relative;
    height: 430rpx;
}
.top-bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 430rpx;
}
.top .user{
    overflow: hidden;
    position: absolute;
    bottom: 145rpx;
    left: 35rpx;
    display: flex;
}
.top .user .user-img{
    float: left;
    width: 120rpx;
    height: 120rpx;
    margin-right: 42rpx;
    border-radius: 50%;
    overflow: hidden;
}
.top .user .user-img image{
    display: block;
    max-width: 100%;
}
.top .user .info{
    flex: 1;
}
.top .user .info .name{
    font-size: 36rpx;
    color: #fff;
    font-weight: bold;
}
.top .user .info .txt{
    color: #fff;
    font-size: 24rpx;
}