/* miniprogram/pages/information/information.wxss */

.item:first-child {
  height: 140rpx;
}
.item {
  width: 100%;
  height: 119rpx;
  line-height: 119rpx;
  border-bottom: #f5f5f5 1px solid;
  padding: 0 32rpx 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: #fff;
}


.item .name {
  font-size: 30rpx;
  color: #3f3f3f;
}

.item .img {
  width: 106rpx;
  height: 106rpx;
  float: right;
  padding: 17rpx 0;
}

.img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.item .info {
  color: #929292;
  font-size: 30rpx;
  flex: 1;
  text-align: right;
}

.item .info input {
  width: 100%;
  height: 100%;
  line-height: 100%;
  display: inline-block;
}

.item .info label:first-child {
  margin-right: 0;
}

.item .info label {
  font-size: 30rpx;
  height: 100%;
  color: #929292;
  margin-right: 40rpx;
  display: block;
  float: right;
}

.item .info label radio {
  width: 20rpx;
  border-radius: 50%;
  margin-right: 22rpx;
  font-size: 0;
  float: left;
  display: block;
  background: url(data:image/png;base64,) left center no-repeat;
  background-size: 100%;
}

.item .info label radio[checked] {
  background: url(data:image/png;base64,) left center no-repeat;
  background-size: 100%;
}

/* 默认的样式隐藏 */

.wx-radio-input {
  display: none;
}

.btn-1 {
  margin: 52rpx 25rpx 162rpx;
}

.btn-1 button {
  background: #009b62;
  text-align: center;
  height: 104rpx;
  color: #fff;
}
