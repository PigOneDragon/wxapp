/* miniprogram/pages/information/information.wxss */
page{
    background: #fff;
}
.item:first-child{
    height: 140rpx;
}
.item{
    width: 100%;
    height: 119rpx;
    line-height: 119rpx;
    border-bottom: #f5f5f5 1px solid;
    padding: 0 32rpx 0 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content:space-between;
}
.item .name{
    font-size: 30rpx;
    color: #3f3f3f;
}
.item .img{
    width: 106rpx;
    height: 106rpx;
    float: right;
    padding: 17rpx 0;
}
.img image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.item .info{
    color: #929292;
    font-size: 30rpx;
    flex: 1;
    text-align: right;
}
.item .info input{
    width: 100%;
    height: 100%;
    line-height: 100%;
    display: inline-block;
}
.item .info radio{
    width: 20rpx;
    height: 20rpx;
    border: #000 1px solid;
    border-radius: 50%;
}
/*  重写 radio 样式  */
/* 未选中的 背景样式 */
radio .wx-radio-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;
   height: 40rpx;
   padding: 5rpx;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
   background: #C00;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#00F; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
