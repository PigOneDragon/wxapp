<!--miniprogram/pages/information/information.wxml-->
<view class='m-infoList'>
  <view class='item'>
    <text class='name'>头像</text>
    <view class='img'>
      <image src='{{haad }}' mode="aspectFill"></image>
    </view>
  </view>
  <view class='item'>
    <text class='name'>呢称</text>
    <view class='info'>
      <input type="text" placeholder="{{user }}" />
    </view>
  </view>
  <view class='item'>
    <text class='name'>真实姓名</text>
    <view class='info'>
      <input type="text" placeholder="{{name }}" />
    </view>
  </view>
  <view class='item'>
    <text class='name'>性别</text>
    <radio-group class='info'>
      <label>
        <radio value="女" checked="{{sex === '女'}}"></radio>女</label>
      <label>
        <radio value="男" checked="{{sex === '男'}}"></radio>男</label>
    </radio-group>
  </view>
  <view class='item'>
    <text class='name'>生日</text>
    <view class='info'>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="{{today}}" bindchange="bindDateChange">
        <view class="picker">
          {{date}}
        </view>
      </picker>
    </view>
  </view>
  <view class='item'>
    <text class='name'>手机号码</text>
    <view class='info'>
      <input type="number" placeholder="188****3566" />
    </view>
  </view>
  <view class='item'>
    <text class='name'>身份证号</text>
    <view class='info'>
      <input type="number" placeholder="330***********1234" />
    </view>
  </view>
  <view class='item'>
    <text class='name'>工号</text>
    <view class='info'>
      <input type="number" placeholder="65456316" />
    </view>
  </view>
  <view class='item'>
    <text class='name'>登录密码</text>
    <view class='info'>
      <input password type="number" placeholder="******" />
    </view>
  </view>
  <view class='btn-1'>
    <button type='submit'>保存</button>
  </view>
</view>